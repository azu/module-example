{
  "name": "@azu/module-example",
  "version": "1.0.3",
  "description": "ES Modules example package",
  "keywords": [
    "module"
  ],
  "homepage": "https://github.com/azu/module-example",
  "bugs": {
    "url": "https://github.com/azu/module-example/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/module-example.git"
  },
  "license": "MIT",
  "author": "azu",
  "main": "lib/module-example.js",
  "module": "module/module-example.js",
  "types": "lib/module-example.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "bin/",
    "lib/",
    "module"
  ],
  "scripts": {
    "build": "tsc -p . && tsc --project ./tsconfig.module.json",
    "clean": "rimraf lib/ module/",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepublish": "npm run --if-present build",
    "test": "mocha \"test/**/*.ts\"",
    "watch": "tsc -p . --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.23",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "ts-node-test-register": "^8.0.1",
    "typescript": "^3.9.7"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
